{
  "name": "gif-scrubber",
  "version": "4.1.3",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@parcel/config-webextension": "^2.9.3",
    "buffer": "^6.0.3",
    "convert-manifest-format": "^0.4.0",
    "file-saver": "^2.0.5",
    "jquery": "^3.7.0",
    "jszip": "^3.10.1",
    "parcel": "^2.9.3",
    "process": "^0.11.10",
    "progressbar.js": "^1.1.0"
  },
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "parcel build manifest.json --target=chrome --no-source-maps",
    "build:firefox": "parcel build manifest.json --target=firefox --no-source-maps && cd dist/firefox && convert-manifest-format --firefox && cd ../..",
    "start:chrome": "parcel watch manifest.json --target=chrome --host localhost",
    "start:firefox": "parcel watch manifest.json --target=firefox --host localhost"
  },
  "targets": {
    "chrome": {
      "distDir": "./dist/chrome"
    },
    "firefox": {
      "distDir": "./dist/firefox"
    }
  }
}
